@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-7">
    <form style="max-width:300px; margin:auto;">
        <img src="~/img/logo.png" height="170" alt="Alternate Text" />
        <h1 class="h3 mt-3 font-weight-normal">Dim Dim Bank</h1>
        <input type="text" name="cpf" value="" class="form-control mt-3" placeholder="CPF" />
        <input type="password" name="senha" value="" class="form-control mt-2" placeholder="Senha" />
        <div class="mt-3 mb-2">
            <input type="submit" name="entrar" value="Entrar" class="btn btn-lg btn-outline-secondary btn-block" />
        </div>
        @Html.ActionLink(
            linkText: "Esqueceu a senha?",
            actionName: "Action",
            controllerName: "Home")
        @Html.ActionLink(
            linkText: "É novo por aqui?",
            actionName: "CadastrarCliente",
            controllerName: "Cliente")
    </form>
</div>
