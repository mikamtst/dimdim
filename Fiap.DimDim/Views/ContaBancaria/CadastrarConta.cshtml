@model IEnumerable<Fiap.DimDim.Models.ContaBancaria>
@{
    ViewData["Title"] = "CadastrarConta";
}
@section head{
    <style type="text/css">
         body {
            background-image: url('../Images/tela_conta_bancaria.png');
            margin: 0;
        }
    </style>
}
<head>

  @RenderSection("head", required: false)

</head>

<h1>CadastrarConta</h1>

<form method="get" style="max-width:800px;">
    <input type="text" name="agencia" value="Agencia: 0001" />
    <input type="text" name="numero" value="Numero da Conta: 12345" />
    <input type="text" name="tipo" value="Tipo de conta: CC" />
    <input type="datetime" name="criadoEm" value="Criado: @DateTime.Now" />
    <a href="/Home/Index" title="Sair" class="btn btn-dark col-md-3 mt-5">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        Sair
    </a>
</form>
